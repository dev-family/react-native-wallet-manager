{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "lib/typescript",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "stripInternal": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/__tests__",
    "**/*.test.ts",
    "**/*.spec.ts",
    "example"
  ]
}
